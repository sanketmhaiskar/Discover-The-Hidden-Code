<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:paddingBottom="25dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.30"
            android:gravity="center"
            android:text="@string/text_time"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txtPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.40"
            android:gravity="center"
            android:text="@string/text_points"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txtDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.30"
            android:gravity="center"
            android:text="@string/text_difficult"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linlay_answers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LinLay_clue1"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/clue1_sr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:gravity="center"
                    android:text="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#0000ff" />

                <ImageView
                    android:id="@+id/clue1_letter1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:src="@drawable/letters1_1" />

                <ImageView
                    android:id="@+id/clue1_letter2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:src="@drawable/letters1_1" />

                <ImageView
                    android:id="@+id/clue1_letter3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:src="@drawable/letters1_1" />

                <ImageView
                    android:id="@+id/clue1_letter4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:src="@drawable/letters1_1" />

                <TextView
                    android:id="@+id/clue1_rw"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="0.20"
                    android:gravity="center"
                    android:text="@string/text_defaultclues"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinLay_clue2"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/clue2_sr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:gravity="center"
                    android:text="2"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#0000ff" />

                <ImageView
                    android:id="@+id/clue2_letter1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:src="@drawable/letters1_1" />

                <ImageView
                    android:id="@+id/clue2_letter2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:src="@drawable/letters1_1" />

                <ImageView
                    android:id="@+id/clue2_letter3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:src="@drawable/letters1_1" />

                <ImageView
                    android:id="@+id/clue2_letter4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:src="@drawable/letters1_1" />

                <TextView
                    android:id="@+id/clue2_rw"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="0.20"
                    android:gravity="center"
                    android:text="@string/text_defaultclues"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinLay_clue3"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/clue3_sr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:gravity="center"
                    android:text="3"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#0000ff" />

                <ImageView
                    android:id="@+id/clue3_letter1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:src="@drawable/letters1_1" />

                <ImageView
                    android:id="@+id/clue3_letter2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:src="@drawable/letters1_1" />

                <ImageView
                    android:id="@+id/clue3_letter3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:src="@drawable/letters1_1" />

                <ImageView
                    android:id="@+id/clue3_letter4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:src="@drawable/letters1_1" />

                <TextView
                    android:id="@+id/clue3_rw"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="0.20"
                    android:gravity="center"
                    android:text="@string/text_defaultclues"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinLay_clue4"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/clue4_sr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:gravity="center"
                    android:text="4"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#0000ff" />

                <ImageView
                    android:id="@+id/clue4_letter1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:src="@drawable/letters1_1" />

                <ImageView
                    android:id="@+id/clue4_letter2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:src="@drawable/letters1_1" />

                <ImageView
                    android:id="@+id/clue4_letter3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:src="@drawable/letters1_1" />

                <ImageView
                    android:id="@+id/clue4_letter4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:src="@drawable/letters1_1" />

                <TextView
                    android:id="@+id/clue4_rw"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="0.20"
                    android:gravity="center"
                    android:text="@string/text_defaultclues"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinLay_clue5"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal"
                android:visibility="invisible" >

                <TextView
                    android:id="@+id/clue5_sr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:gravity="center"
                    android:text="5"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#0000ff" />

                <ImageView
                    android:id="@+id/clue5_letter1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:src="@drawable/letters1_1" />

                <ImageView
                    android:id="@+id/clue5_letter2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:src="@drawable/letters1_1" />

                <ImageView
                    android:id="@+id/clue5_letter3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:src="@drawable/letters1_1" />

                <ImageView
                    android:id="@+id/clue5_letter4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:src="@drawable/letters1_1" />

                <TextView
                    android:id="@+id/clue5_rw"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="0.20"
                    android:gravity="center"
                    android:text="@string/text_defaultclues"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/option_letter1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.16"
            android:src="@drawable/letters1_1" />

        <ImageView
            android:id="@+id/option_letter2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.16"
            android:src="@drawable/letters1_1" />

        <ImageView
            android:id="@+id/option_letter3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.17"
            android:src="@drawable/letters1_1" />

        <ImageView
            android:id="@+id/option_letter4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.17"
            android:src="@drawable/letters1_1" />

        <ImageView
            android:id="@+id/option_letter5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.17"
            android:src="@drawable/letters1_1" />

        <ImageView
            android:id="@+id/option_letter6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.17"
            android:src="@drawable/letters1_1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlay_options"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dip" >

        <TextView
            android:id="@+id/btn_GameReviewNext"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/gamesettings_buttons_backgroundselector_2"
            android:clickable="true"
            android:gravity="center"
            android:text="Next"
            android:textColor="@color/color_button_text_blue" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlay_answers"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_above="@+id/linlay_options"
        android:layout_alignLeft="@+id/linlay_options"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="80dip" >

        <ImageView
            android:id="@+id/answer_letter1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:src="@drawable/red_question"
            android:textColor="@color/color_red" />

        <ImageView
            android:id="@+id/answer_letter2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:src="@drawable/red_question"
            android:textColor="@color/color_red" />

        <ImageView
            android:id="@+id/answer_letter3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:src="@drawable/red_question"
            android:textColor="@color/color_red" />

        <ImageView
            android:id="@+id/answer_letter4"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:src="@drawable/red_question"
            android:textColor="@color/color_red" />
    </LinearLayout>

</RelativeLayout>